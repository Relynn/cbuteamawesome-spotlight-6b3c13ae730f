<body class="salmon">
  <p id="notice"><%= notice %></p>
  <head>
  <h1>
    Presentation Blocks
    <% if current_user && current_user.is_professor? %>
      <%= link_to 'New Presentation block', new_presentation_block_path, class: "btn login_btn" %>
    <% end %>
  </h1>
  <style>
    td {padding-right: 30px}
  </style>
  </head>
  <div class="col-md-6 col-md-offset-3">
  <% if current_user && current_user.is_professor? %>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @presentation_blocks.each do |presentation_block| %>
          <tr>
            <td><%= presentation_block.name %></td>
            <td><%= presentation_block.month %>/<%= presentation_block.day %> </td>
            <td><%= link_to 'Show', presentation_block %></td>
            <td><%= link_to 'Edit', edit_presentation_block_path(presentation_block) %></td>
            <td><%= link_to 'Destroy', presentation_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h2>You don't have permission to see this!</h2>
  <% end %>
  </div>
  <br>
  
  
</body>