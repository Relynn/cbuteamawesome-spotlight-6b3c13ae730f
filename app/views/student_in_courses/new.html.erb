<h1>Join a Course</h1>
<br>
<body class="teal">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student_in_course) do |f| %>
     
      <%= f.label :course_token, "Enter Course ID:" %>
      <%= f.text_field :course_token, class: 'form-control' %>
      
      <%= f.submit "Join Course", class: "btn" %>
    <% end %>
  </div>
</body>
