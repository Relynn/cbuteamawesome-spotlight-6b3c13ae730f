<body class="show">
<% provide(:title, @user.name) %>
  <% if current_user && current_user.is_professor? %>
    <div class="row_prof">
      <div class="welcome">
        <h1>Professor Home Page</h1>
      </div>
        <div class="professor">
          <div>
            <%= link_to(image_tag("icon4.png", :style => 'width: 20%; height: 15%;'),  create_choices_path) %>
            <%= link_to(image_tag("icon8.png", :style => 'width: 20%; height: 15%;'), view_path) %>
          </div>
          <div>
            <%= link_to(image_tag("icon10.png", :style => 'width: 20%; height: 15%;'), help_path) %>
            <%= link_to(image_tag("icon9.png", :style => 'width: 20%; height: 15%;'), about_path) %>
          </div>
        </div>
    </div>
    
  <% else %>
    <div class="row_prof">
      <div class="student_welcome">
        <h1>Student Home Page</h1>
      </div>
        <div class="student">
          <div>
            <%= link_to(image_tag("icon5.png", :style => 'width: 20%; height: 15%;'), sic_new_path) %>
            <%= link_to(image_tag("icon8.png", :style => 'width: 20%; height: 15%;'), view_path) %>
          </div>
          <div>
            <%= link_to(image_tag("icon10.png", :style => 'width: 20%; height: 15%;'), help_path) %>
            <%= link_to(image_tag("icon9.png", :style => 'width: 20%; height: 15%;'), about_path) %>
          </div>
        </div>
    </div>
  <% end %>
</body>
